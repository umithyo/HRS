@model LoginVM

<div class="container">
    <form asp-action="Register" method="post">
        <div class="start-user login col-md-12 row">
            <h1 class="col-md-8" data-aos-duration="500" data-aos="fade-down">ÜYE OL</h1>
            @if (ViewBag.Error != null)
            {
                <div class="col-md-8 alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }
            <div class="form-group col-md-8" data-aos="fade-down">
                <input class="form-control" asp-for="UserInfo.Name">
                <span asp-validation-for="UserInfo.Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8" data-aos="fade-down">
                <input class="form-control" asp-for="UserInfo.Surname">
                <span asp-validation-for="UserInfo.Surname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8" data-aos="fade-down">
                <input class="form-control" asp-for="User.TCKimlikNo">
                <span asp-validation-for="User.TCKimlikNo" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8" data-aos="fade-down">
                <input class="form-control" asp-for="UserInfo.Phone">
                <span asp-validation-for="UserInfo.Phone" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8" data-aos="fade-down">
                <input class="form-control" asp-for="UserInfo.Email">
                <span asp-validation-for="UserInfo.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8" data-aos="fade-down">
                <input class="form-control" asp-for="User.Password">
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <button class="col-md-8 user_2 hvr-shutter-in-vertical hvr-round-corners" type="submit">
                <i class="fa fa-user" aria-hidden="true"></i>
                <text class="link">Üye Ol</text>
            </button>

            <span class="information">Soru ve sorunlarınız için yardim masasi<a href="http://mhrs.gov.tr" class="link-mhrs">yardim@mhrs.gov.tr</a> adresimizi kullanarak bize ulaşabilirsiniz. </span>

        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
